class Solution:
    def maxPower(self, stations: List[int], r: int, k: int) -> int:
        n = len(stations)
        diff = [0] * (n + 1)
        for i in range(n):
            diff[max(0, i - r)] += stations[i]
            diff[min(n, i + r + 1)] -= stations[i]

        def check(key):
            dc = diff[:]
            ps = 0
            ava = k
            for i in range(n):
                ps += dc[i]
                if ps < key:
                    add = key - ps
                    if add > ava:
                        return False
                    ps += add
                    dc[min(n, i + r * 2 + 1)] -= add
                    ava -= add
            return True
        left = min(stations)
        right = sum(stations) + k
        while left < right:
            mid = left + (right - left + 1) // 2
            if check(mid):
                left = mid
            else:
                right = mid - 1
        return left
