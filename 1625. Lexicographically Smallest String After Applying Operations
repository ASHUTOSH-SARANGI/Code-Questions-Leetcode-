class Solution:
    def findLexSmallestString(self, s: str, a: int, b: int) -> str:
        n = len(s)
        q = deque([s])
        seen = set()
        seen.add(s)
        ans = s
        while q:
            curr = q.popleft()
            ans = min(ans, curr)
            op1 = list(curr)
            for i in range(1, n, 2):
                op1[i] = str((int(op1[i]) + a) % 10)
            op1 = "".join(op1)
            if not op1 in seen:
                seen.add(op1)
                q.append(op1)
            op2 = list(curr)
            op2 = op2[-b:] + op2[:-b]
            op2 = "".join(op2)
            if not op2 in seen:
                seen.add(op2)
                q.append(op2)

        return ans
        
