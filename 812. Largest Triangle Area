class Solution(object):
    def largestTriangleArea(self, points):
        """
        :type points: List[List[int]]
        :rtype: float
        """
        n = len(points)
        if n < 3:
            return 0
        area = 0.0
        for i in range(n):
            for j in range(i +1, n):
                for k in range(j+1, n):
                    a, b = points[i]
                    c, d = points[j]
                    e, f = points[k]
                    a = 0.5*(abs(a*(d-f) + c*(f-b) + e*(b-d)))
                    if a > area:
                        area = a
        return area
        
