class Solution:
    def maxIncreasingSubarrays(self, nums: List[int]) -> int:
        n = len(nums)
        dp = [1] * n
        for i in range(1, n):
            if nums[i] > nums[i - 1]:
                dp[i] = dp[i - 1] + 1
            
        max_k = [1] * n
        for i in range(n - 2, -1, -1):
            if nums[i] < nums[i + 1]:
                max_k[i] = max_k[i + 1] + 1
        ans = 1
        for i in range(n - 1):
            ans = max(ans, min(dp[i], max_k[i + 1]))
        return ans 
