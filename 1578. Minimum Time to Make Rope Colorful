class Solution:
    def minCost(self, colors: str, neededTime: List[int]) -> int:
        n = len(colors)
        res = 0
        i = 0
        while i < n:
            j = i
            tot = 0
            mx = 0
            while j < n and colors[i] == colors[j]:
                tot += neededTime[j]
                mx = max(mx, neededTime[j])
                j += 1
            res += tot - mx
            i = j
        return res

                
