class Solution(object):
    def largestPerimeter(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        nums.sort(reverse = True)
        n = len(nums)
        p = 0
        if n < 3:
            return 0
        for i in range(n - 2):
            if nums[i + 1] + nums[i + 2] > nums[i]:
                p = nums[i + 1] + nums[i + 2] + nums[i]
                break
        return p


        
