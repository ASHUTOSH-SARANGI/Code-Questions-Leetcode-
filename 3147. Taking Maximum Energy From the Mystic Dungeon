class Solution(object):
    def maximumEnergy(self, energy, k):
        """
        :type energy: List[int]
        :type k: int
        :rtype: int
        """
        n = len(energy)
        res = []
        res = energy
        for i in range(n - 1, -1, -1):
            if i + k < n:
                res[i] = energy[i] + energy[i + k]
        return max(res)
         
        
